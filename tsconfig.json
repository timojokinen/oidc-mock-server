{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "emitDeclarationOnly": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "declaration": true,
        "sourceMap": true
    },
    "include": [
        "src/index.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        ".keys"
    ]
}